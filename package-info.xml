<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>skynettechnologies:allinoneaccessibility</id>
	<name>All in One AccessibilityÂ®</name>
	<version>1.0</version>
	<type>modification</type>

	<!-- Installation for SMF 2.0 -->
	<install for="2.0 - 2.0.99">
		<modification>install.xml</modification>
		<modification>install-utf8.xml</modification>
		<!-- Copy main source file -->
		<require-file name="files/css/style.css" destination="$themedir/css" />
		<require-file name="files/scripts/allinoneaccessibility.js" destination="$themedir/scripts" />
		<!-- Redirect to settings page after install -->
		<redirect url="index.php?action=admin;area=modsettings;sa=aioa" timeout="5000">redirect.txt</redirect>
	</install>

	<uninstall for="2.0 - 2.0.99">
		<modification reverse="true">install.xml</modification>
		<modification reverse="true">install-utf8.xml</modification>
		<!-- Remove files -->
		<remove-file name="$themedir/css/style.css" />
		<remove-file name="$themedir/scripts/allinoneaccessibility.js" />
	</uninstall>

	<!-- Installation for SMF 2.1.6 -->
	<install for="2.1 - 2.1.99">
