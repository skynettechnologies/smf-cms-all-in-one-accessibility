<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>skynettechnologies:allinoneaccessibility</id>
	<name>All in One AccessibilityÂ®</name>
	<version>1.0.2</version>
	<type>modification</type>

	<install for="2.0 - 2.1.99">
		<modification>install21.xml</modification>
		<!-- Copy main source file -->
		<require-file name="files/Sources/AllinOneAccessibility.php" destination="$sourcedir" />
		<require-file name="files/css/style.css" destination="$themedir/css" />
		<require-file name="files/scripts/allinoneaccessibility.js" destination="$themedir/scripts" />
		<require-file name="files/languages/Modifications.english.php" destination="$themedir/languages" />

		<redirect url="index.php?action=admin;area=modsettings;sa=aioa" timeout="5000">redirect.txt</redirect>
	</install>

	<uninstall for="2.0 - 2.1.99">
		<modification reverse="true">install21.xml</modification>
		<!-- Remove files -->
		<remove-file name="$sourcedir/AllinOneAccessibility.php" />
		<remove-file name="$themedir/css/style.css" />
		<remove-file name="$themedir/scripts/allinoneaccessibility.js" />
		<remove-file name="$themedir/languages/Modifications.english.php" />
	</uninstall>

</package-info>
